        tools:ignore="OnClick"
        />

    <ImageView
        android:id="@+id/img3"
        android:layout_width="110dp"
        android:layout_height="190dp"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="70dp"
        android:onClick="clickimg3"
        tools:ignore="OnClick"/>

    <ImageView
        android:id="@+id/img4"
        android:layout_width="110dp"
        android:layout_height="190dp"
