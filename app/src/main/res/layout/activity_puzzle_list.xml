        android:onClick="clickimg1"
        tools:ignore="OnClick" />


    <ImageView
        android:id="@+id/img2"
        android:layout_width="110dp"
        android:layout_height="190dp"
        android:layout_marginLeft="145dp"
        android:layout_marginTop="70dp"
