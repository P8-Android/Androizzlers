<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/primaryLightColor"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/sand_clock"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:contentDescription="@string/app_name"
            android:padding="5dp"
            android:background="@color/primaryLightColor"
            android:src="@drawable/sandclock" />

        <ImageView
            android:id="@+id/star_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/puzzle_lvl"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="-200dp"
            android:layout_marginTop="2dp"
            android:layout_toStartOf="@id/puzzle_lvl"
            android:layout_toEndOf="@id/sand_clock"
            android:src="@drawable/star">
        </ImageView>


        <TextView
            android:id="@+id/puzzle_lvl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/sand_clock"
            android:text="Puzzle Level"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_time_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/puzzle_lvl"
            android:layout_marginStart="10dp"
            android:layout_marginTop="40dp"
            android:layout_toEndOf="@id/sand_clock"
            android:drawablePadding="2dp"
            android:text="60 sec" />

        <TextView
            android:id="@+id/text_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_time_score"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="2dp"
            android:layout_toEndOf="@id/sand_clock"
            android:drawablePadding="2dp"
            android:text="Fecha" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>





